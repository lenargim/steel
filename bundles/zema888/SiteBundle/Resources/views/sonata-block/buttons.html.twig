{% extends sonata_block.templates.block_base %}
{% block block %}
    <div class="cms-block cms-block-element">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Кнопки управления</h3>
            </div>
            <div class="box-body">
                <div class="row" style="margin: 5px;">
                    {% for button in settings.buttons %}
                        <a href="{{ button.url }}" class="btn btn-primary" target="_blank" style="margin: 5px;">
                            <i class="fa {{ button.icon }}" aria-hidden="true"></i> {{ button.title }}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover">
                    <tbody>
                    {% for button in settings.buttons if button.info %}
                        <tr>
                            <td class="sonata-ba-list-label" width="20%">
                                <i class="fa {{ button.icon }}" aria-hidden="true"></i> {{ button.title }}
                            </td>
                            <td>
                                <p>{{ button.info }}</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
