{% extends 'layout.html.twig' %}
{% block content %}
    <section class="content-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    {{ city.col1 | raw}}
                </div>
                <div class="col-lg-6 col-md-6">
                    {{ city.col2 | raw}}
                </div>
            </div>
        </div>
    </section>
    <section class="map" id="mymap"
         style="height: 500px;"
         data-points="{{ city.points | json_encode }}"></section>
{% endblock %}
{% block seo %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBa_g2Gc0R0lIOHMPtosh0KkA7SNTILlrM&language=ru&callback=window.initMap" async defer></script>
    <script src="{{ asset('build/map.js') }}"></script>
{% endblock %}
