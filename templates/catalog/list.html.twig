{% extends 'layout.html.twig' %}
{% block content %}
    <div class="category-page block">
        <div class="container-outer">
            <div class="container">
                {{ render(controller('App\\Controller\\PartController:breadcrumbs', {'page': page})) }}
                <h1 class="page-title page-title_short">{{ page.h1 }}</h1>
                <div class="catalog-page__wrap">
                    {% for key, item in page.getChildren([catalogItemClass]) %}
                        <a href="{{ sitePath(item.route) }}" class="catalog-page__item">
                            <div class="catalog-page__img img">
                                <img src="{{ item.getWebPath('image2') | thumb(441, 314) }}" alt="{{ item.menutitle }}">
                            </div>
                            <div class="portfolio__gallery-box">
                                <span class="portfolio__gallery-title">{{ item.menutitle }}</span>
                                <p class="portfolio__gallery-desc">{{ item.announce }}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {{ include('part/quality.html.twig') }}
{% endblock %}
