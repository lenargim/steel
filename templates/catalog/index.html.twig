{% extends 'layout.html.twig' %}
{% block content %}
    <section class="product-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="wrap-prod">
                        <div class="product-image">
                            <a href="{% if (page.getWebPath('originalImage')) %}{{ page.getWebPath('originalImage') }}{% else %}{{ page.getWebPath('image') | thumb(440,330) }}{% endif %}" class="popup">
                                <img src="{{ page.getWebPath('image') | thumb(440,330) }}" alt="{{ page.menutitle }}">
                            </a>
                        </div>
                        {% set price = page | getPrice(app.request) %}
                        {% if price %}
                            <div class="prod-price">Цена:  <b>{{ price | number_format(0, ',', ' ')}}</b> ₽ <button  onclick="window.cart.addingItem({{ page.id }}, 1)" class="btn btn-red btn-cart">В корзину</button></div>
                        {% else %}
                            <div class="prod-price">Цена:  <b>Договорная</b></div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="wrapper wrapper-prod">
                        <div class="tabs">
                            <span class="tab">{{ 'item_title1' | getString('Карточка товара') }}</span>
                            {% if page.specification %}
                            <span class="tab">{{ 'item_title2' | getString('Карточка товара') }}</span>
                            {% endif %}
                        </div>
                        <div class="tab_content">
                            <div class="tab_item container">
                                {{ page.descriptionText | raw }}
                            </div>
                            {% if page.specification %}
                            <div class="tab_item">
                                <div class="description container">
                                    {{ page.specification | raw }}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if favorites | length > 0 %}
    <section class="other-goods">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="title-h2">Похожие товары</h2>
                    <div class="row">
                        {% for item in favorites %}
                        {% include 'catalog/product-box.html.twig' %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}
