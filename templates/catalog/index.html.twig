{% extends 'layout.html.twig' %}
{% block content %}
    <div class="catalog-detailed block">
        <div class="container-outer">
            <div class="container">
                {{ render(controller('App\\Controller\\PartController:breadcrumbs', {'page': page})) }}
                <h1 class="page-title page-title_short">{{ page.h1 }}</h1>
                <section class="catalog-detailed__info block">
                    <div class="catalog-detailed__img img">
                        <img src="{{ page.getWebPath('image') | thumb(760, 600) }}"
                                                                alt="{{ page.menutitle }}">
                    </div>
                    <div class="catalog-detailed__text">
                        {{ page.text | raw }}
                        <div class="catalog-detailed__button button">Узнать стоимость</div>
                    </div>
                </section>
                <div class="catalog-page__wrap">
                    {% for item in favorites %}
                        <a href="{{ sitePath(item.route) }}" class="catalog-page__item">
                            <div class="catalog-page__img img">
                                <img src="{{ item.getWebPath('image') | thumb(441, 314) }}" alt="{{ item.menutitle }}">
                            </div>
                            <div class="portfolio__gallery-box">
                                <span class="portfolio__gallery-title">{{ item.menutitle }}</span>
                                <p class="portfolio__gallery-desc">{{ item.announce }}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="overlay overlay_price">
        <div class="modal__close"></div>
        <div class="modal modal-callback">
            <div class="modal-callback__title">Узнайте стоимость вашей идеи</div>
            <div class="modal-callback__desc">Отправьте ваши контактные данные и мы свяжемся с вами</div>
            <form action="" class="modal-callback__form">
                <div class="modal-callback__row">
                    <div class="modal-callback__field">
                        <label for="callback-name" class="modal-callback__label">Ваше имя</label>
                        <input type="text" id="callback-name" class="modal-callback__input">
                    </div>
                    <div class="modal-callback__field">
                        <label for="callback-phone" class="modal-callback__label">Номер телефона</label>
                        <input type="tel" id="callback-phone" class="modal-callback__input">
                    </div>
                    <div class="modal-callback__field">
                        <label for="callback-email" class="modal-callback__label">Электронная почта</label>
                        <input type="email" id="callback-email" class="modal-callback__input">
                    </div>
                </div>
                <input type="submit" class="modal-callback__submit button" value="Отправить">
            </form>
        </div>
    </div>
{% endblock %}
