{% if page.text or page.seotitle %}
<section class="block quality">
  <div class="container-outer">
    <div class="container">
      <div class="quality__wrap">
        <img src="{{ asset('build/quantity-img.png') }}" alt="quantity-img" class="quality__img">
        <div class="quality__info">
          <div class="quality__title title">{{ page.seotitle }}</div>
          <div class="quality__text">
            {{ page.text | raw }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}
